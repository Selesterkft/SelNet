<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
                android:id="@+id/login_backgroundPic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/login_back"
                android:scaleType="centerCrop"
                android:scrollX="-100dp"/>
        <LinearLayout
                android:id="@+id/login_headerLine"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shadow_layout" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toTopOf="@+id/login_backgroundPic" app:layout_constraintHorizontal_bias="0.0"
                android:orientation="horizontal"/>
        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/login_logo_btn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="18dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:id="@+id/login_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/setting_icon"
                android:layout_marginTop="5dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                app:layout_constraintEnd_toEndOf="@+id/login_headerLine" android:layout_marginEnd="16dp"/>
        <androidx.viewpager.widget.ViewPager
                android:id="@+id/login_viewpager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/login_tabLayout" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:background="#556f6f6f"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/login_headerLine"
                android:id="@+id/linearLayout3">
            <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="Üdvözöljük"
                    android:textColor="@color/whiteColor"
                    android:shadowColor="@color/blackColor"
                    style="@style/login_text_shadow"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/blackColor"
                    style="@style/login_text_shadow"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="A Selester Kft. által biztosított Selexped alkalmazás minden funkciójának eléréséhez először be kell jelentkeznie."
                    android:textColor="@color/whiteColor"
                    android:textSize="18sp"
                    android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/login_version"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        </LinearLayout>
        <TextView
                android:text="v 1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/whiteColor"
                android:id="@+id/login_version" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>

    <com.hbb20.CountryCodePicker
            android:id="@+id/login_cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ccp_countryPreference="hu,hu"
            app:ccp_autoDetectCountry="true"
            android:layout_marginTop="20dp"
            android:background="@color/whiteColor"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
    />

    <EditText
            android:id="@+id/login_phonenumber"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="telefonszám"
            android:background="@color/whiteColor"
            android:inputType="phone"
            android:singleLine="true"
            app:layout_constraintStart_toEndOf="@+id/login_cc" android:layout_marginStart="0dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/login_headerLine"
            app:layout_constraintBottom_toBottomOf="@+id/login_cc" app:layout_constraintTop_toTopOf="@+id/login_cc"/>
    <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Bejelentkezés"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/login_phonenumber"
            app:layout_constraintEnd_toEndOf="@+id/login_viewpager"
            app:layout_constraintStart_toStartOf="@+id/login_viewpager" android:layout_marginStart="8dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_progressBar"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/login_phonenumber"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/errorColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_errortext" android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/login_phonenumber" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>