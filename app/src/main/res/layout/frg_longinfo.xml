<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <WebView
            android:id="@+id/longinfo_webview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/longinfo_exit"/>
    <ImageView
            android:id="@+id/longinfo_exit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/but_cancel_44x44"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="5dp"
    />

</android.support.constraint.ConstraintLayout>