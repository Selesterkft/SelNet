<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textAlignment="center"
            android:padding="10dp"
            android:textSize="20sp"
            android:id="@+id/textView3"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/whiteColor"
            app:layout_constraintTop_toTopOf="parent" />
    <ImageView
            android:id="@+id/setting_qrcamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wsqr"
            app:layout_constraintTop_toBottomOf="@id/textView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_qrcamera" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/textInputLayout5"
            app:layout_constraintEnd_toStartOf="@+id/setting_newterminal" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/setting_terminal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="TerminÃ¡l"/>
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/but_refresh_44x44"
            app:layout_constraintBottom_toBottomOf="@+id/textInputLayout5"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:id="@+id/setting_newterminal" android:layout_marginBottom="8dp"/>
    <ImageView
            android:id="@+id/setting_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/info" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/setting_qrcamera"
            app:layout_constraintStart_toEndOf="@+id/setting_qrcamera" android:layout_marginStart="8dp"/>
    <ImageView
            android:id="@+id/setting_exit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/but_cancel_44x44" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <ImageView
            android:id="@+id/setting_save"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/but_save_44x44" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
