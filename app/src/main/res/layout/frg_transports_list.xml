<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tasks"
            android:textAlignment="center"
            android:padding="10dp"
            android:textSize="20sp"
            android:id="@+id/textView3"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/whiteColor"
            android:layout_marginTop="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="0dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="0dp"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/transports_list_orderList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintBottom_toTopOf="@id/transportlist_exit"/>
    <ImageView
            android:id="@+id/transportlist_exit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/but_cancel_44x44" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <ImageView
            android:id="@+id/transportlist_set"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/but_ok_44x44" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>