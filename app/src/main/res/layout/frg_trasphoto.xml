<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
    <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Fotókezelő"
            android:textColor="@color/whiteColor"
            android:padding="15dp"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:id="@+id/taskphoto_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/taskphoto_header" android:id="@+id/linearLayout">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/blackColor"
                    android:text="Dokumentum típusa:"/>

            <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/taskphoto_docTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal" android:id="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <ImageView
                android:id="@+id/transphoto_camera"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/camera"/>
        <ImageView
                android:id="@+id/taskphoto_file"
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/camera_folder"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/transphoto_list"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/transphoto_btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>
    <Button
            android:id="@+id/transphoto_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Képek feltöltése" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>